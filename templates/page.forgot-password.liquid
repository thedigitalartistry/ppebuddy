{% layout 'page.forgot-password' %}
      
  <div class="main">
    <div class="main-section">
      <div class="forgot-password-main">
        <div class="forgot-password-logo-wrapper"><img src="{{ 'logo_blue-1.png' | asset_url }}" width="190" alt="" class="image-65">
          <div class="fp-text">{{ 'forgot-password.DIV_0' | t }}</div>
        </div>
        <div class="recover-form---copy-this w-form">{% form 'recover_customer_password' %}
          {% unless form.posted_successfully? %}<div udesly-add-class="form-5"></div><input type="email" class="text-field-9 w-input" maxlength="256" name="email" placeholder="Email" id="email" required=""><input type="submit" value="Reset" data-wait="Please wait..." class="fp-button w-button">{% endunless %}
          
          
        </div><div class="recover-form---copy-this w-form">{% if form.errors %}<div class="w-form-fail" style="display: inherit;">
            <div>{% include 'form-errors' %}</div>
          </div>{% endif %}{% if form.posted_successfully? %}<div class="w-form-done" style="display: inherit;">
            <div>{{ 'forgot-password.DIV_1' | t }}</div>
          </div>{% endif %}</div>{% endform %}
        <div data-w-id="10941c5e-cc3c-3e0e-c214-349d113535b9" class="back-to-login-text">{{ 'forgot-password.DIV_2' | t }}</div>
      </div>
    </div>
  </div>
  <script src="https://d3e54v103j8qbb.cloudfront.net/js/jquery-3.5.1.min.dc5e7f18c8.js?site=5f1873fee0c93a114d25e26b" type="text/javascript" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="{{ 'webflow.js' | asset_url }}" type="text/javascript"></script>
  <!-- [if lte IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif] -->

