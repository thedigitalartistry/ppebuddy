<div class="on-sale-badge-card {{ classes }}">
    {%- assign variant = product.selected_or_first_available_variant -%}
    <div class="overlay-badge">
        <span>{{ product.selected_or_first_available_variant.compare_at_price | minus: product.selected_or_first_available_variant.price | times: 100.0 | divided_by: product.selected_or_first_available_variant.compare_at_price | money_without_currency | replace: ',', '.' | times: 100 | remove: '.0'}}%</span>
