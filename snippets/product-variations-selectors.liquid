<select id="product-select-{{index}}" name="id" class="w-select" data-udy-element="single-option-selector">{% include 'product-options' %}</select>
          
{% if product.available and product.variants.size > 1 %}
      {% for option in product.options %}
    {% include 'product-variations-options', o: option, wrapper: wrapperClass, lD: optionClass, lC: colorClass, tC: titleClass %}
      {% endfor %}
    {% endif %}