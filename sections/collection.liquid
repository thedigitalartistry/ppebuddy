        <div class="collection-banner-container">
            <div class="collection-banner-content">

               {% if collection.handle == 'main-collection' %}
                    <div class="slide-left-content">
                        <div class="text-block-141">ALL PRODUCTS</div>
                        <h1 class="heading-82">Always Stay<br> Protected!</h1>
                        <p class="slide-paragraph">Grab N' Go PPE Kits to keep you <br> safe and protected.</p>
                    </div>
               {% endif %}
               {% if collection.handle == 'face-masks' %}
                    <div class="slide-left-content">
                        <div class="text-block-141">{{ 'collection.DIV_109' | t }}</div>
                        <h1 class="heading-82">{{ 'collection.H1_110' | t }}<br>{{ 'collection.H1_111' | t }}</h1>
                        <p class="slide-paragraph">{{ 'collection.P_112' | t }}</p>
                    </div>
               {% endif %}
               {% if collection.handle == 'gloves' %}
                    <div class="slide-left-content">
                        <div class="text-block-141">{{ 'collection.DIV_113' | t }}</div>
                        <h1 class="heading-82">{{ 'collection.H1_114' | t }}<br>{{ 'collection.H1_115' | t }}<br>{{ 'collection.H1_116' | t }}</h1>
                        <p class="slide-paragraph">{{ 'collection.P_117' | t }}<br>{{ 'collection.P_118' | t }}<br>{{ 'collection.P_119' | t }}<br>{{ 'collection.P_120' | t }}<br>{{ 'collection.P_121' | t }}<br>{{ 'collection.P_122' | t }}<br></p>
