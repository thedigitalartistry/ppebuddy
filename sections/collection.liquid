               {% endif %}
               {% if collection.handle == 'kits' %}
                    <div class="slide-left-content">
                        <div class="text-block-141">{{ 'collection.DIV_138' | t }}</div>
                        <h1 class="heading-82">Explore <br> Our Kits</h1>
                        <p class="slide-paragraph">{{ 'collection.P_141' | t }}<br>{{ 'collection.P_142' | t }}</p>
                    </div>
               {% endif %}
               
            </div>
        </div>
    </div>
{% endif %}

<div class="collection-section">
    {% paginate collection.products by settings.collection_products_limit %}
        <div data-w-id="defb88d1-b297-4b39-b50a-d91faa622c25" class="collection-list-wrapper-2 w-dyn-list">
            
            {% include 'collection_filter' id: "collection_1" %}
        
            <div role="list" class="collection-list-2 w-dyn-items collection_1">
                {% for product in collection.products %}
                    <div role="listitem" class="w-dyn-item">
                        <div class="collection-item__card-product">
                        
                            {% include 'collection_product_image_cart' %}

                            {% include 'collection_product_content' %}

                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if collection.products == empty %}
            <div class="empty-state-7 w-dyn-empty">
                <div class="product-not-available-container">
                    <img src="{{ 'empty.png' | asset_url }}" loading="lazy" width="130" alt="" class="image-71">
                    <div class="text-block-151">
                        {{ 'collection.DIV_154' | t }}
                    </div>
                </div>
            </div>
            {% endif %}

            {% comment %} <div class="w-pagination-wrapper pagination-3">
                {% if paginate.previous.is_link %}
                    <a href="{{ paginate.previous.url }}" class="w-pagination-previous previous">
                        <div class="text-block-143 w-inline-block">{{ 'collection.DIV_155' | t }}</div>
                        <img src="{{ 'arrow-left.png' | asset_url }}" loading="lazy" width="14.5" alt="">
                    </a>
                {% endif %}
                {% if paginate.next.is_link %}
                    <a href="{{ paginate.next.url }}" class="w-pagination-next next">
                        <div class="text-block-142 w-inline-block">{{ 'collection.DIV_156' | t }}</div>
                        <img src="{{ 'arrow-right.png' | asset_url }}" loading="lazy" width="14.5" alt="">
                    </a>
                {% endif %}
            </div> {% endcomment %}

           {% include 'pagination' %} 
            
        </div>
    {% endpaginate %}

</div>
