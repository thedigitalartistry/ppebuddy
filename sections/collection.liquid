               {% endif %}
               {% if collection.handle == 'sanitizers' %}
                    <div class="slide-left-content">
                        <div class="text-block-141">{{ 'collection.DIV_123' | t }}</div>
                        <h1 class="heading-82">{{ 'collection.H1_124' | t }}<br>{{ 'collection.H1_125' | t }}<br>{{ 'collection.H1_126' | t }}</h1>
                        <p class="slide-paragraph">{{ 'collection.P_127' | t }}<br>{{ 'collection.P_128' | t }}<br>{{ 'collection.P_129' | t }}<br>{{ 'collection.P_130' | t }}</p>
